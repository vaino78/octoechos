#!/usr/bin/perl

$FIX_CNTRLM=1;              # удалять или нет ^М
$TO_KOI8 = 1;               # переводить или нет в koi8

while (<>) {

  if ($FIX_CNTRLM) { s///g; } # Удаляем CNTRL-M's

  if ($TO_KOI8) { # переводим в KOI8
    tr/ЮАБЦДЕФГХИЙКЛМНОПЯРСТУЖВЬЫЗШЭЩЧЪюабцдефгхийклмнопярстужвьызшэщчъ/абвгдежзийклмнопрстуфхцчшщъыьэюяАБВГДЕЖЗИЙКЛМНОПРСТУФХЦЧШЩЪЫЬЭЮЯ/;
  }

  print;
}
